---
import CosmicLayout from '../layouts/CosmicLayout.astro';
import Uploader from '../components/Uploader.astro';
import Gallery from '../components/Gallery.astro';
---

<CosmicLayout title="Cosmic Image Gallery">
  <section class="header">
    <h1>Astronaut Gallery</h1>
  </section>
  <Uploader />
  <Gallery />

  <style>
    .header h1 {
      margin: 0 0 6px;
      font-size: 28px;
    }
    .sub {
      color: var(--muted);
      margin: 0 0 20px;
    }

    .gallery-wrap h2 {
      margin: 26px 0 12px;
    }
    .gallery {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
      gap: 14px;
    }
    .card {
      border: 1px solid #223;
      border-radius: 12px;
      overflow: hidden;
      background: rgba(255, 255, 255, 0.02);
    }
    .thumb {
      aspect-ratio: 1/1;
      background: #0d1124;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    .thumb img {
      max-width: 100%;
      max-height: 100%;
      object-fit: cover;
      display: block;
    }
    .meta {
      padding: 8px 10px;
      font-size: 12px;
      color: var(--muted);
      display: grid;
      gap: 4px;
    }
    .meta .title {
      color: var(--fg);
      font-weight: 600;
      font-size: 13px;
    }
    .meta .row {
      display: flex;
      justify-content: space-between;
      gap: 8px;
    }
  </style>
</CosmicLayout>
