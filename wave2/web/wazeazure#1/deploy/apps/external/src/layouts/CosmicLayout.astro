<style>
  :root {
    --bg1: #050814;
    --bg2: #0b1022;
    --fg: #e6ecff;
    --muted: #9aa3c0;
    --accent: #7aa2ff;
    --accent-2: #c07bff;
  }
  html,
  body {
    margin: 0;
    height: 100%;
    background:
      radial-gradient(1200px 600px at 20% 10%, #0d1533 0%, transparent 60%),
      radial-gradient(900px 700px at 80% 0%, #1a0b2e 0%, transparent 60%),
      linear-gradient(180deg, var(--bg1) 0%, var(--bg2) 100%);
    color: var(--fg);
    font-family:
      ui-sans-serif,
      system-ui,
      -apple-system,
      Segoe UI,
      Roboto,
      Inter,
      Arial,
      sans-serif;
  }
  .container {
    max-width: 1100px;
    margin: 0 auto;
    padding: 32px 20px 64px;
  }
  .cosmos {
    position: fixed;
    inset: 0;
    overflow: hidden;
    z-index: -1;
  }
  .stars,
  .twinkle {
    position: absolute;
    inset: 0;
    background: transparent
      url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="3" height="3"><circle cx="1" cy="1" r="1" fill="white" opacity="0.9"/></svg>')
      repeat;
  }
  .stars {
    animation: drift 180s linear infinite;
    opacity: 0.4;
  }
  .twinkle {
    animation: drift 240s linear infinite reverse;
    opacity: 0.2;
    filter: blur(1px);
  }
  @keyframes drift {
    from {
      transform: translateY(0);
    }
    to {
      transform: translateY(-2000px);
    }
  }
</style>
